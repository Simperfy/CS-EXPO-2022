---
import Header from '../components/Main/Header.jsx';
import Footer from '../components/Main/Footer.astro';
let { title } = Astro.props;
---
<html lang="en" class="dark">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
	<title>{title}</title>

	<link rel="icon" type="image/x-icon" href="./favicon.ico" />
	<link rel="stylesheet" href={Astro.resolve("../styles/global.css")}>
	<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
	<link rel="stylesheet" href={Astro.resolve("../styles/projects.css")}>
	<style>
	body, html {
		height: 100%; color: white;

	}
	</style>
</head>
<body class="text-black dark:bg-black dark:text-white font-body">
	<Header client:load/>
	<main class="main-content h-full projects">
        <slot/>
	</main>
	<Footer />
</body>
</html>
